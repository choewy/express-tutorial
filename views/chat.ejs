<!doctype html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">

    <title>NODE TODO APP | CHAT</title>
  </head>
  <body>
    <!-- NAV BAR -->
    <div class="fixed-top">
      <div class="collapse" id="navbarToggleExternalContent">
        <div class="bg-dark p-4">
          <h5 class="text-white h4">NODE TODO APP</h5>
          <span class="text-muted">Node.js로 구현한 Todo App</span>
          <ul class=" navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item">
            <a class="nav-link text-muted" href="/">홈</a>
            </li>
            <li class="nav-item">
            <a class="nav-link text-muted" href="/item">목록</a>
            </li>
            <li class="nav-item">
            <a class="nav-link text-white" href="/chat">채팅</a>
            </li>
            <li class="nav-item">
            <a class="nav-link text-muted" href="/upload">웹하드</a>
            </li>
          </ul>
        </div>
      </div>
      <nav class="navbar navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      </nav>
    </div>

      <!-- CONTENT -->
      <div class="container mt-5 pt-5">
        <h4 class="mb-4 justify-content-between">
          채팅방
          <button class="btn-info btn btn-new">생성</button>
        </h4>
      </div>
      <form class="container input-group form-search mb-1">
        <input name="search" class="form-control input-search">
        <button type="submit" class="input-group-append btn btn-primary">검색</button>
      </form>
      <div class="container">
        <ul class="list-group">
          <% rooms.forEach(room => { %>
          <li class="list-group-item">
            <h4><%= room.title %></h4>
            <p><%= room.creator %> | <%= room.date %></p>
            <button class="btn-primary btn btn-join" data-id="<%= room._id%>">참가</button>
          </li>
          <%}) %>
        </ul>
      </div>

      <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
      $('.btn-new').click(e => {
        window.location.pathname = `/chat/new`;
      });

      $('.form-search').submit(e => {
        e.preventDefault();
        const query = $('.form-search').serialize();
        if (query === "search=") window.location.replace(`/chat`);
        else window.location.replace(`/chat?${query}`);
      });
      $('.btn-join').click(e => {
        const _id = e.target.dataset.id;
        window.location.pathname = `/chat/${_id}`;
      })
    </script>
  </body>
</html>